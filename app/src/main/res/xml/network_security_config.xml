<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- 信任系统证书和用户添加的证书 -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    
    <!-- 豆包域名特殊配置：信任所有证书（用于开发/测试） -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">openspeech.bytedance.com</domain>
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </domain-config>
    
    <!-- VectorEngine API 域名配置 -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">vectorengine.ai</domain>
        <domain includeSubdomains="true">api.vectorengine.ai</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
</network-security-config>
